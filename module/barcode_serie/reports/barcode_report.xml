<odoo>
	
	<template id="gen_bar_code_serie">
        <t t-call="web.html_container">
			<t t-call="web.basic_layout">
				<div class="page">
					<div class="row">
	                    <t t-foreach="docs.move_lines" t-as="ml">
	                        <t t-foreach="ml.move_line_ids" t-as="mls">
	                        	<t t-foreach="mls.product_id" t-as="mlss">
		                        	<t t-foreach="mlss.attribute_value_ids" t-as="mlssl">

										<div style="
								            overflow:hidden;
								            text-align: center;
								           margin-bottom:2em;">
											  
											  	<div style="
											  		 display:inline-table;
										            
										            padding:15px;
										            height:100px;
										            width:100px;
										            margin:3px;
										            float: left;
													">
												<span t-esc="docs.company_id.numero_tienda"/>
												</div>

												<div style="
											  		 display:inline-table;
										            
										            padding:15px;
										            height:100px;
										            width:100px;
										            margin:3px;
										            float: right;
													">

												<span t-esc="time.strftime('%m/%d/%Y',time.strptime(docs.scheduled_date,'%Y-%m-%d %H:%M:%S'))" style="text-align:right;"/>
												</div>
												<br/><br/><br/>
											
											  
										    	
				                      
				                        	
				                        		<div>
					                        		<div style="float: left;  font-size:22px; font-weight: bold;">
						                        		<span >
						                        		<t t-esc="ml.product_id.name" />
						                        		</span>
						                        		<span> /
						                        		<t t-esc="mlssl.name" /></span><br/>
						                        		<span> /
						                        		<t t-esc="mlss.default_code" />
						                        		</span>
						                        		<img t-attf-src="data:image/*;base64,{{mlss.image_medium}}" style="width: 50%;"/>
					                        		</div>
					                        		 <div style="
														    transform:rotate(90deg);
															-ms-transform:rotate(90deg); /* IE 9 */
															-webkit-transform:rotate(90deg); /* Opera, Chrome, and Safari */
															position:absolute;
														    
														   right:10px;
														    padding-top:20px;">

												    	<span>
															<img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128',mls.product_id.barcode, 100, 30)" /><br/>
															<t t-esc="mlss.barcode" />
														</span>
											    	</div>
				                        	    </div>

				                        
												
					                        	<div class="text-center">
														<span> 
														<img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128',mls.lot_name, 250, 100)" />
														
														</span>
														<br/>
														<span class="text-center" >
															
															<t t-esc="mls.lot_name" />
														</span>
													
											    </div>

										</div>
										
									</t>
								</t>
							</t>
						</t>
					</div>
				</div>
			</t>
		</t>
	</template>
		
	<record id="paperformat_barcode" model="report.paperformat"> 
            <field name="name">Codigo de barras</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">51</field>
            <field name="page_width">76</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">2</field>
            <field name="margin_left">1</field>
            <field name="margin_right">1</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">1</field>
            <field name="dpi">130</field>
    </record>

</odoo>